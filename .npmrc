# NPM Configuration for SafraReport Deployment
# Helps resolve platform-specific dependency issues

# Prefer offline cache for faster installs
prefer-offline=true

# Include optional dependencies (important for platform-specific binaries)
include=optional

# Use legacy peer deps resolver to avoid conflicts
legacy-peer-deps=false

# Registry configuration
registry=https://registry.npmjs.org/

# Engine strict mode disabled for deployment flexibility  
engine-strict=false

# Fund messages disabled to reduce noise in CI/CD
fund=false