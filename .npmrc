# NPM Configuration for SafraReport Dominican Marketplace
# Optimized for slow networks, budget phones, mobile-first deployment

# Speed optimizations for Dominican mobile networks
prefer-offline=true
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Include optional dependencies (platform-specific binaries)
include=optional

# Disable noise for cleaner CI/CD logs
fund=false
audit=false

# Registry configuration
registry=https://registry.npmjs.org/

# Engine strict mode disabled for deployment flexibility
engine-strict=false

# Progress disabled for faster installs
progress=false

# pnpm-specific configuration for Tailwind compatibility
shamefully-hoist=true
strict-peer-dependencies=false
auto-install-peers=true
node-linker=hoisted