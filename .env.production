# Production Environment Variables
# Replace these with your actual production values

NODE_ENV=production

# Production Database (Neon)
DATABASE_URL=postgresql://your_production_user:your_production_password@your_production_host/your_production_db?sslmode=require

# Production Session Secret (Generate a new strong secret)
SESSION_SECRET=your_production_session_secret_here_make_it_very_long_and_random

# Production Auth0 Configuration
AUTH0_DOMAIN=your_production_domain.auth0.com
AUTH0_CLIENT_ID=your_production_client_id
AUTH0_CLIENT_SECRET=your_production_client_secret
AUTH0_AUDIENCE=https://api.safrareport.com
AUTH0_ISSUER_BASE_URL=https://your_production_domain.auth0.com
AUTH0_SECRET=your_production_auth0_secret_32_chars

# Production URL
REPLIT_URL=https://your-production-domain.com
PORT=4000